<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AudioActivity"
    android:background="@drawable/bg">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record a COMMENT"
        android:background="@drawable/button_round"
        android:id="@+id/bttn"
        android:textColor="@color/white"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goto AUDIO WALL"
        android:textColor="@color/white"
        android:background="@drawable/button_round"
        android:id="@+id/button2"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
    <!-- layout is taken from http://www.androidhive.info/2014/07/android-building-multi-language-supported-app/-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Sound's good feature of Audio Status.
        Click Record to Audio Comment!Now you can Record and Share your thoughts. "
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Hear what others have to Say!"
        android:gravity="center_horizontal"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/bttn" />

</RelativeLayout>
